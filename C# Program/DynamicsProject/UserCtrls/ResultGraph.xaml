<UserControl x:Class="KarliCardGame.UserCtrls.ResultGraph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KarliCardGame.UserCtrls"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">

            <TextBlock x:Name="question" TextAlignment="Center" HorizontalAlignment="Left" Margin="27,43,0,0"  VerticalAlignment="Top" Height="52" Width="450" FontFamily="Segoe UI Black" FontSize="16" 
                   Background="White" Text="Graphical Representation">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="4" ShadowDepth="3" Color="#FFE66F6F"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock Text="Load(ton/10)" Margin="35,0" FontFamily="Segoe UI Black" FontWeight="Bold" FontStyle="Italic"/>
            <Canvas x:Name="graphCanvas" Background="White" RenderTransformOrigin="0.5,0.5"/>
            
        </StackPanel>

    </Grid>
</UserControl>
