<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/graph_activity"
    android:orientation="vertical"
    android:layout_margin="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.googleplaystore.kidusmt.dynamicsassignment.GraphActivity">

    <TextView
        android:textColor="#123123"
        android:textSize="25dp"
        android:gravity="center_horizontal"
        android:text="Graph Analysis"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="200dip" />

    <TextView
        android:layout_marginTop="10dp"
        android:textSize="28dp"
        android:text="@string/conclusion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/graph_conclusion"
        android:text="@string/graph_conclusion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>